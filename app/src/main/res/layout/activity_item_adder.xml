<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:padding="15dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:text="Add Item"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/accentDark"
        android:layout_marginLeft="10dp"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/bubble_clothes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="6dp"
            app:backgroundTint="@color/colorPrimaryLight"
            app:pressedTranslationZ="12dp"
            android:visibility="visible" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/bubble_tech"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="65dp"
            android:elevation="6dp"
            app:backgroundTint="@color/colorPrimary"
            app:pressedTranslationZ="12dp"
            android:visibility="visible" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/bubble_grocery"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="65dp"
            android:elevation="6dp"
            app:backgroundTint="@color/secondaryColorLight"
            app:pressedTranslationZ="12dp"
            android:visibility="visible" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:hint="Item Name"
        android:fontFamily="@font/roboto_light_italic"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/add"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_button_style"
            android:backgroundTint="@color/colorAccent"
            android:text="Add"
            android:fontFamily="@font/roboto_bold_condensed"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#FDFDFE"
            android:clickable="true"
            android:layout_marginLeft="160dp"/>

        <Button
            android:id="@+id/done"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_button_style"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginLeft="15dp"
            android:text="Done"
            android:fontFamily="@font/roboto_bold_condensed"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#FDFDFE"
            android:clickable="true" />

    </LinearLayout>



</LinearLayout>